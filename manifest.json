{
  "manifest_version": 3,
  "name": "Libby Lookup",
  "version": "1.0",
  "description": "Check OverDrive (Libby) availability for books on Goodreads",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://www.goodreads.com/*",
    "https://thunder.api.overdrive.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Libby Lookup"
  }
}
